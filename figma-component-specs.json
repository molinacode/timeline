{
    "components": {
        "button": {
            "variants": {
                "primary": {
                    "background": "gradient(crimson-500, cerulean-500)",
                    "text": "white",
                    "padding": "8px 24px",
                    "borderRadius": "full",
                    "fontWeight": "medium",
                    "shadow": "md",
                    "hover": {
                        "opacity": "0.9"
                    }
                },
                "secondary": {
                    "background": "lapis-lazuli-100",
                    "text": "lapis-lazuli-700",
                    "padding": "8px 16px",
                    "borderRadius": "base",
                    "fontWeight": "medium",
                    "hover": {
                        "background": "lapis-lazuli-200"
                    }
                },
                "tertiary": {
                    "background": "transparent",
                    "text": "lapis-lazuli-700",
                    "padding": "8px 12px",
                    "borderRadius": "base",
                    "fontWeight": "medium",
                    "hover": {
                        "background": "lapis-lazuli-50"
                    }
                }
            },
            "states": {
                "disabled": {
                    "opacity": "0.5"
                },
                "loading": {
                    "opacity": "0.7"
                }
            }
        },
        "input": {
            "base": {
                "padding": "12px",
                "borderRadius": "base",
                "border": "1px solid lapis-lazuli-300",
                "background": "white",
                "fontSize": "base",
                "focus": {
                    "border": "transparent",
                    "ring": "2px solid cerulean-500"
                }
            },
            "variants": {
                "error": {
                    "border": "1px solid rose-red-500",
                    "background": "rose-red-50"
                },
                "success": {
                    "border": "1px solid mint-green-500",
                    "background": "mint-green-50"
                }
            }
        },
        "card": {
            "base": {
                "padding": "16px",
                "borderRadius": "md",
                "background": "white",
                "border": "1px solid gray-200",
                "shadow": "md"
            },
            "variants": {
                "hover": {
                    "shadow": "lg"
                },
                "selected": {
                    "border": "2px solid cerulean-500",
                    "background": "cerulean-50"
                }
            },
            "dark": {
                "background": "gray-800",
                "border": "1px solid gray-700",
                "text": "white"
            }
        },
        "newsCard": {
            "base": {
                "padding": "16px",
                "borderRadius": "md",
                "background": "white",
                "border": "1px solid gray-200",
                "shadow": "md",
                "hover": {
                    "shadow": "lg"
                }
            },
            "elements": {
                "title": {
                    "fontSize": "lg",
                    "fontWeight": "semibold",
                    "color": "gray-900",
                    "marginBottom": "8px",
                    "lineClamp": "2"
                },
                "description": {
                    "fontSize": "base",
                    "color": "gray-700",
                    "marginBottom": "12px",
                    "lineClamp": "3"
                },
                "metadata": {
                    "fontSize": "sm",
                    "color": "gray-600",
                    "display": "flex",
                    "justifyContent": "space-between",
                    "alignItems": "center"
                },
                "link": {
                    "fontSize": "sm",
                    "color": "mint-green-600",
                    "fontWeight": "medium",
                    "textDecoration": "none"
                }
            }
        },
        "biasBar": {
            "base": {
                "height": "32px",
                "borderRadius": "md",
                "overflow": "hidden",
                "display": "flex"
            },
            "segments": {
                "conservative": {
                    "background": "crimson-500",
                    "color": "white",
                    "fontSize": "xs",
                    "fontWeight": "medium",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center"
                },
                "centrist": {
                    "background": "cerulean-500",
                    "color": "white",
                    "fontSize": "xs",
                    "fontWeight": "medium",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center"
                },
                "progressive": {
                    "background": "mint-green-500",
                    "color": "white",
                    "fontSize": "xs",
                    "fontWeight": "medium",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center"
                }
            },
            "legend": {
                "fontSize": "xs",
                "color": "gray-600",
                "display": "flex",
                "justifyContent": "space-between",
                "marginTop": "8px"
            }
        },
        "badge": {
            "base": {
                "padding": "4px 8px",
                "borderRadius": "full",
                "fontSize": "xs",
                "fontWeight": "medium"
            },
            "variants": {
                "conservative": {
                    "background": "crimson-100",
                    "color": "crimson-800"
                },
                "centrist": {
                    "background": "cerulean-100",
                    "color": "cerulean-800"
                },
                "progressive": {
                    "background": "mint-green-100",
                    "color": "mint-green-800"
                },
                "regional": {
                    "background": "lapis-lazuli-100",
                    "color": "lapis-lazuli-800"
                }
            }
        },
        "statisticsCard": {
            "base": {
                "padding": "16px",
                "borderRadius": "md",
                "background": "white",
                "border": "1px solid gray-200",
                "shadow": "sm",
                "textAlign": "center"
            },
            "elements": {
                "number": {
                    "fontSize": "2xl",
                    "fontWeight": "bold",
                    "color": "cerulean-600",
                    "marginBottom": "4px"
                },
                "label": {
                    "fontSize": "sm",
                    "color": "gray-600"
                }
            }
        },
        "header": {
            "base": {
                "height": "64px",
                "padding": "16px 24px",
                "background": "mint-green-100",
                "borderBottom": "1px solid mint-green-200",
                "shadow": "sm",
                "display": "flex",
                "alignItems": "center",
                "justifyContent": "space-between"
            },
            "elements": {
                "logo": {
                    "display": "flex",
                    "alignItems": "center",
                    "gap": "8px"
                },
                "searchBar": {
                    "flex": "1",
                    "maxWidth": "512px",
                    "margin": "0 32px"
                },
                "actions": {
                    "display": "flex",
                    "alignItems": "center",
                    "gap": "16px"
                }
            }
        },
        "navigation": {
            "base": {
                "display": "flex",
                "alignItems": "center",
                "gap": "16px"
            },
            "items": {
                "padding": "8px 12px",
                "borderRadius": "base",
                "fontWeight": "medium",
                "color": "lapis-lazuli-700",
                "textDecoration": "none",
                "hover": {
                    "background": "lapis-lazuli-50"
                }
            }
        }
    },
    "layouts": {
        "homePublic": {
            "grid": "4 columns",
            "mainColumn": "3/4",
            "sidebarColumn": "1/4",
            "gap": "32px",
            "maxWidth": "1280px",
            "breakpoints": {
                "mobile": "1 column",
                "tablet": "2 columns",
                "desktop": "4 columns"
            }
        },
        "userLogged": {
            "grid": "3 columns",
            "leftColumn": "1/3",
            "rightColumn": "2/3",
            "gap": "24px",
            "maxWidth": "1152px",
            "breakpoints": {
                "mobile": "1 column",
                "desktop": "3 columns"
            }
        },
        "demoDashboard": {
            "grid": "responsive",
            "statistics": "4 columns (md: 2, lg: 4)",
            "biasDistribution": "3 columns (md: 3)",
            "stories": "1 column",
            "sources": "3 columns (md: 2, lg: 3)",
            "gap": "16px",
            "maxWidth": "1152px"
        }
    },
    "darkMode": {
        "backgrounds": {
            "primary": "gray-900",
            "secondary": "gray-800",
            "tertiary": "gray-700"
        },
        "text": {
            "primary": "white",
            "secondary": "gray-300",
            "tertiary": "gray-400"
        },
        "borders": {
            "primary": "gray-700",
            "secondary": "gray-600"
        }
    }
}
